<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TextToImage.TextToImageActivity">
    <EditText
        android:id="@+id/etLine1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_margin="4dp"
        android:inputType="text"
        android:imeOptions="actionNext"
        />
    <EditText
        android:id="@+id/etLine2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Devices id"
        app:layout_constraintTop_toBottomOf="@+id/etLine1"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_margin="4dp"
        android:inputType="number"
        android:imeOptions="actionNext"
        />
    <EditText
        android:id="@+id/etLine3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location"
        app:layout_constraintTop_toBottomOf="@+id/etLine2"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_margin="4dp"
        android:inputType="text"
        android:imeOptions="actionDone"
        />
    <TextView
        android:id="@+id/tvColourText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        app:layout_constraintTop_toBottomOf="@+id/etLine3"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"/>
    <Button
        android:id="@+id/bnAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Action"
        app:layout_constraintTop_toBottomOf="@+id/tvColourText"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_margin="8dp"
        />
    <Button
        android:id="@+id/bnQR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QR"
        app:layout_constraintTop_toBottomOf="@+id/bnAction"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_margin="8dp"
        />
    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@+id/bnQR"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginTop="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout></ScrollView>